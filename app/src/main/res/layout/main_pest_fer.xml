<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/PestFer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pesticides_and_fertilizers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:padding="12dp"/>


    <GridLayout
        android:id="@+id/gridCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PestFer"
        android:columnCount="1">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPesticides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageViewShape"
                    app:srcCompat="@drawable/pesticides_management"
                    android:contentDescription="Pesticides card view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pesticides"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/pesticide_management_protecting_your_crops_and_plants"
                        android:textColor="#4CAF50"
                        android:textAppearance="?attr/textAppearanceBody1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCardPesticides"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/learn_more"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?attr/textAppearanceButton"
                        style="?attr/borderlessButtonStyle"
                        android:backgroundTint="#4CAF50" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFertilizers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageViewShape"
                    app:srcCompat="@drawable/fertilizers_application"
                    android:contentDescription="Fertilizers card view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fertilizers"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/fertilizer_application_nourish_your_crops_for_healthy_growth"
                        android:textColor="#4CAF50"
                        android:textAppearance="?attr/textAppearanceBody1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCardFertilizers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/learn_more"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?attr/textAppearanceButton"
                        style="?attr/borderlessButtonStyle"
                        android:backgroundTint="#4CAF50" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>


</RelativeLayout>
